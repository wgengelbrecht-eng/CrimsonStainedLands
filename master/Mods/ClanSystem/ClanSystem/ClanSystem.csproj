<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\CrimsonStainedLands\CrimsonStainedLands.csproj" />
  </ItemGroup>

  <Target Name="CopyFilesToCrimson" AfterTargets="Build">
    <PropertyGroup>
      <CrimsonOutputDirectory>$(ProjectDir)..\..\..\CrimsonStainedLands\bin\$(Configuration)\net8.0\</CrimsonOutputDirectory>
    </PropertyGroup>

    <ItemGroup>
      <MyDllFiles Include="$(TargetDir)$(TargetName).dll" />
      <MyDllFiles Include="$(TargetDir)$(TargetName).pdb" />
    </ItemGroup>

    <Copy SourceFiles="@(MyDllFiles)"
          DestinationFolder="$(CrimsonOutputDirectory)"
          SkipUnchangedFiles="true"
          OverwriteReadOnlyFiles="true" />
          
  </Target>
</Project>
